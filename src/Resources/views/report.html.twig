<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>SEO Analyser report</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <style>
      h2 {
        padding: 20px 0;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="#">SEO Analyser report</a>
    </nav>

    <main role="main" class="container">
      <div>
        {% for sitemap in sitemaps %}
          <h2>{{ sitemap.url }}</h2>

          {% for location in sitemap.locations %}
            {% if location.hasErrors() %}
              <p>{{ severity_counter(location) }}<a
                data-toggle="collapse"
                href="#{{ location.url | sanitise_id }}"
                role="button"
                aria-expanded="false"
                aria-controls="{{ location.url | sanitise_id }}"
              >
                {{ location.url }}
              </a></p>
              <div id="{{ location.url | sanitise_id }}" class="collapse">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th scope="col">Description</th>
                      <th scope="col">Severity</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for error in location.errors %}
                      <tr>
                        <td scope="row">{{ error.description }}</td>
                        <td>{{ severity_badge(error.severity) }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      </div>
    </main>
    <footer class="footer mt-auto py-3">
      <div class="container">
        <span class="text-muted">Generated by {{ get_version() }} on {{ "now"|date('Y-m-d H:i:s') }}</span>
      </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>